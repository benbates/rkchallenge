<h1>Leaderboard</h1>

    <ul class="nav nav-tabs">
      <li class="active"><a href="#<%= @goal_types.first.id %>" data-toggle="tab"><%= @goal_types.first.name %></a></li>     
      <% @goal_types.drop(1).each do |goal_type| %>
        <li><a href="#<%= goal_type.id %>" data-toggle="tab"><%= goal_type.name %></a></li>
      <% end %>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="<%= @goal_types.first.id %>">   <%= @goal_types.first.name %></div>
      <% @goal_types.drop(1).each do |goal_type| %>
        <div class="tab-pane" id="<%= goal_type.id %>"><%= goal_type.name %></div>
      <% end %>
      </div>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Current Goal</th>
          <th>Remaining</th>
          <th>Total Reps</th>
        </tr>
      </thead>
      <tbody>   
        <% @goals.each do | goal | %>
          <tr>
            <td><%= link_to goal.name, goal %></td>        	  
          </tr>
        <% end %>
      </tbody>
    </table>
