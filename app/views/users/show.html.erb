<% provide(:title, @user.name) %>
<p id="notice"><%= notice %></p>
<div class="row-fluid">
  <%= image_tag @user.avatar.url(:thumb) %> 
  <h1><%= @user.name %></h1> 
</div>
<h2>Current Goals</h2>
<%= render 'layouts/current_goals' %>

<div id="exercises">
<h2>Exercises</h2>
    <%= will_paginate @exercises, :params => {:anchor => "exercises"} %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Execerise</th>
      <th>Reps</th>
      <th>Date</th>      
    </tr>
  </thead>
  <tbody>
  <% @exercises.each do | exercise | %>
    <tr>
      <td><%= exercise.exercise_type.name %></th>
      <td><%= exercise.reps %></th>
      <td><%= exercise.exercise_date %></td>
      <% if current_user?(@user) %>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>      
    </tr>
  <% end %>
  </tbody>
</table>

    <%= will_paginate @exercises%>
  </div>
<%= link_to 'Back', users_path %>

<script type="text/javascript">
  $(function () { var a = $('[href=' + location.hash + ']'); a && a.tab('show'); });
  $('.nav a').on('shown', function (e) { window.location = "#top"; })
</script>