<div class="row_fluid visible-phone">
  <%= form_for(@exercise) do |f| %>
    <%= fields_for :results do |d| %>
      <div class="span12">            
           <div class="row-fluid">
              <%= select_tag :user, options_from_collection_for_select(User.all, :id, :name) %>
            </div>
        <div class="row-fluid">            
          Score: <%= d.number_field :user_one_score %>
        </div>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit %>
    </div>
    <div class="span2">
      <%= link_to 'New User', new_user_path %>
    </div>
  <% end %>
</div>