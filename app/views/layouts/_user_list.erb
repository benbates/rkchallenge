  <div class="row">
    <div class="span3"><h4>Name</h4></div>
    <div class="span1"><h4>Retired?</h4></div>
  </div>
  <%= form_for :user, :url => {:action => 'update_multiple'} do -%>

    <% @users.each do | user | %>
      <%= fields_for "user[]", user do | user_fields | %>
          <div class="row">
            <div class="span3"><%= user_fields.text_field :name %></div>
            <div class="span1"><%= user_fields.check_box :retired %></div>
            <div class="span1"><%= link_to "Show", user %></div>
            <div class="span1"><%= link_to "Edit", edit_user_path(user.id) %></div>
          </div>
      <% end %> 
    <% end %>
    <%= submit_tag 'Update' %>
  <% end %>