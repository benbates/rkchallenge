    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Current Goal</th>
          <th>Remaining</th>
          <th>Total Reps</th>
        </tr>
      </thead>
      <tbody>   
        <% @users.each do | user | %>
          <% if user.goals.exists?( exercise_type_id: exercise_type, completed_date: nil) %>
            <tr>
              <td><%= link_to user.name, user %></td> 
              <td><%= goal_total(user, exercise_type) %></td>
              <td><%= goal_remaining(user, exercise_type) %></td>
              <td><%= goal_progress(user, exercise_type) %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>