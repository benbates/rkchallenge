<% @date = "" %>
<% @exercises.each do |exercise| %>
  <% @time = exercise.created_at.in_time_zone("Eastern Time (US & Canada)") %>
  <% if @time.strftime("%m/%d/%Y") != @date %>
    <% @date = @time.strftime("%m/%d/%Y") %>
    <h2><%= @date %></h2>
  <% end %>
  <div class="row-fluid">
    <table class="table table-striped table-bordered">
      <% exercise.users.each do |user|%>

      <% end %>

      <% if @admin == true %>   
        <tr><td colspan=2><%= link_to 'Delete', exercise, method: :delete, 
                                                      confirm: 'Are you sure?' %></td></tr> 
      <% end %>
    </table>

  </div>
<% end %>